@page "/"
@using HeroUI.Components

@code{
    List<HColor> hColors = [
        HColor.Primary,
        HColor.Warning,
        HColor.Danger,
        HColor.Success,
        HColor.Secondary
        ];
}
<h1>Hello, world!</h1>

Welcome to HeroUI for Blazor.
<div>
    <div class="mb-4">
        <h1 class="text-24">Buttons</h1>
        @foreach (var color in hColors)
        {
          <div class="mb-2">
            <p class="text-[@color.ToHex()] w-20">@color.ToString()</p>

            <HButton Color="color" Variant="HVariant.Solid" ClassName="m-1">
                Solid
            </HButton>

            <HButton Color="color" Variant="HVariant.Flat" ClassName="m-1">
                Flat
            </HButton>

            <HButton Color="color" Variant="HVariant.Ghost" ClassName="m-1">
                Ghost
            </HButton>

            <HButton Color="color" Variant="HVariant.Bordered" ClassName="m-1">
                Bordered
            </HButton>

            <HButton Color="color" Variant="HVariant.Light" ClassName="m-1">
                Light
            </HButton>
        </div>
        }
    </div>
    <div class="mb-4">
        <h1 class="text-24">CheckBox</h1>
        @foreach (var color in hColors)
        {
            <HCheckBox 
                Label="@color.ToString()"
                ClassName="mx-2"
                Color="color"
                Checked="true"
            />
        }
    </div>
</div>
